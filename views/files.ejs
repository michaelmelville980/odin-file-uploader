  <body>
    <h1>Your Files</h1>

    <form action="/folders/new" method="POST" style="display: inline">
      <button type="submit">New Folder</button>
    </form>

    <form
      action="/files/upload"
      method="POST"
      enctype="multipart/form-data"
      style="display: inline"
    >
      <button type="submit">Upload File</button>
    </form>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Size</th>
          <th>Created</th>
          <th>Last Updated</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
